doctype html
html(lang="en")
    head
        include ../../../views/partials/head

    body
        div(class="container")
            br
            br
            div(class="jumbotron")
                h1(class="display-4") Create new account:
                hr(class="my-4")
                form
                    div(class="form-group")
                        label(for="email") Email address
                        input(type="email" class="form-control" id="email" placeholder="Enter email")
                    div(class="form-group")
                        label(for="name") Full name:
                        input(type="text" class="form-control" id="name" placeholder="Enter Full name")
                        small(id="nameMini" class="form-text text-muted") only alphbet, numbers, "-" and "." are alowed
                    div(class="form-group")
                        label(for="username") username:
                        input(type="text" class="form-control" id="username" placeholder="Enter username")
                        small(id="usernameMini" class="form-text text-muted") only alphbet, numbers, "-" and "." are alowed
                    div(class="form-group")
                        label(for="password") Password
                        input(type="password" class="form-control" id="password" placeholder="Password")
                        small(id="passwordMini" class="form-text text-muted") only alphbet, numbers, "-" and "." are alowed
                    a(id="submit" class="btn btn-primary") Submit

        div(id="email-send-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true")
            div(class="modal-dialog" role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div(class="modal-body")
                        p Verification link has been send to your email, pleas click on it.
                    div(class="modal-footer")
                        a(href="/login" type="button" class="btn btn-primary") go to login
                        
        script(src="/javascripts/user/signin.js")
        include ../../../views/partials/footer
